{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],

    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx"
  },
  "include": ["src"]
}
